# ====================================
# Server Configuration
# ====================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ====================================
# Database Configuration
# ====================================
# Production MongoDB (Atlas or self-hosted)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/yourdb?retryWrites=true&w=majority

# ====================================
# JWT Configuration
# ====================================
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# ====================================
# Security
# ====================================
# Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per window

# ====================================
# Email Service (Nodemailer)
# ====================================
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM='Your App <noreply@yourdomain.com>'

# ====================================
# File Uploads
# ====================================
MAX_FILE_UPLOAD=5  # in MB
FILE_UPLOAD_PATH=./public/uploads

# ====================================
# Logging
# ====================================
LOG_LEVEL=info  # error, warn, info, debug
LOG_FORMAT=combined  # combined, common, dev, short, tiny

# ====================================
# Session (if using express-session)
# ====================================
SESSION_SECRET=your_session_secret
SESSION_EXPIRE=30  # days

# ====================================
# Frontend URLs (for CORS and redirects)
# ====================================
FRONTEND_BASE_URL=https://yourdomain.com

# ====================================
# Production Features
# ====================================
ENABLE_RATE_LIMITING=true
REQUEST_BODY_LIMIT=100kb

# ====================================
# Monitoring (optional)
# ====================================
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key
